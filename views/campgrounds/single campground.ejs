<% layout ('partials/boiletplate.ejs') %>

    <div class="row justify-content-around">
        <h1 class='text-center display-3'>
            <%=camp.title%>
        </h1>
        <div class="col-6 mb-3 mt-3 justify-content-center">
            <div class="card">
                <img class="img-fluid card-img-top" src="<%=camp.image%>" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-secondary">
                        <%=camp.location%>
                    </li>
                    <li class="list-group-item">
                        $<%=camp.price%> per night
                    </li>
                </ul>
                <div class="card-body">
                    <button class='btn btn-secondary card-link'><a
                            href='/campgrounds/edit?id=<%=camp.id%>'>Edit</a></button>
                    <form class='inline' action="/campgrounds/<%=camp.id%>?_method=DELETE" method='POST'>
                        <button class='btn card-link btn-danger'>Delete</button>
                    </form>
                    <button class='btn btn-primary card-link'><a href='/campgrounds'>All
                            campgrounds</a></button>
                </div>
            </div>
        </div>
        <div class="col-4">
            <form action='/campgrounds/<%=camp.id%>/review' method='POST' novalidate class='validation-required'>
                <h3 class='mt-3 text-center'>Leave a review for <%=camp.title.toLowerCase()%>
                </h3>
                <div class="form-group">
                    <label for="body">Review</label>
                    <textarea class='form-control' name="body" id="body" placeholder='Review' cols="30" rows="5"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please include a review
                    </div>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input type='range' class='form-range' name="rating" id="rating" min='1' max='5' required></input>
                    <div class="invalid-feedback">
                        Please leave a rating
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-2">
                        <button type="submit" class="mt-2 btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
            <ul>
                <h3>Reviews:</h3>
                <hr>
                <% for (let review of camp.reviews){ %>
                    <p class='mb-1'><b>Review:</b>
                        <span class='review-body'>
                            <%=review.body%>
                        </span>
                    </p>
                    <div class='review-delete-div'>
                        <p class='mb-3'><b>Rating:</b>
                            <%=review.rating%>
                                <form class='review-delete-form'
                                    action="/campgrounds/<%=camp.id%>/review/<%=review.id%>?_method=DELETE"
                                    method='POST'>
                                    <button id='review-delete-btn' class='btn btn-danger'>Delete</button>
                                </form>
                        </p>
                    </div>
                    <hr>
                    <% } %>
            </ul>
        </div>
    </div>
    </div>