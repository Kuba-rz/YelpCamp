<% layout ('partials/boiletplate.ejs') %>

    <div class="row justify-content-center">
        <div class="col-6 justify-content-center">
            <div class="card">
                <h5 class="display-5 mb-3 card-title text-center">
                    <u>
                        <%=camp.title%>
                    </u>
                </h5>
                <img class="img-fluid card-img-top" src="<%=camp.image%>" alt="Card image cap">
                <div class="card-body">
                    <p class="card-text">
                        <%=camp.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-secondary">
                        <%=camp.location%>
                    </li>
                    <li class="list-group-item">
                        $<%=camp.price%> per night
                    </li>
                </ul>
                <div class="card-body">
                    <button class='btn btn-secondary card-link'><a
                            href='/campgrounds/edit?id=<%=camp.id%>'>Edit</a></button>
                    <form class='inline' action="/campgrounds/<%=camp.id%>?_method=DELETE" method='POST'>
                        <button class='btn card-link btn-danger'>Delete</button>
                    </form>
                    <button class='btn btn-primary card-link'><a href='/campgrounds'>All campgrounds</a></button>
                    <button class='btn btn-primary'><a href="/campgrounds/<%=camp.id%>/review">Add a review</a></button>
                </div>
            </div>
            <form action='/campgrounds/<%=camp.id%>/review' method='POST' novalidate class='validation-required'>
                <h3 class='mt-5 text-center'>Leave a review for <%=camp.title.toLowerCase()%>
                </h3>
                <div class="form-group">
                    <label for="body">Review</label>
                    <textarea class='form-control' name="body" id="body" placeholder='Review' cols="30" rows="5"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please include a review
                    </div>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input type='range' class='form-range' name="rating" id="rating" min='1' max='5' required></input>
                    <div class="invalid-feedback">
                        Please leave a rating
                    </div>
                </div>
                <div class="row d-flex justify-content-center">
                    <div class="col-2">
                        <button type="submit" class="mt-2 btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>